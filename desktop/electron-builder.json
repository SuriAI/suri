{     
    "files": [
        "dist-electron/**/*",
        "dist-react/**/*"
    ],
    "extraResources": [
        {
            "from": "public/weights",
            "to": "weights",
            "filter": ["**/*"]
        }
    ],
    "appId": "com.suri.app",
    "productName": "Suri",
    "icon": "./picture.png",
    "beforePack": "scripts/before-pack.cjs",
    "win": {
        "target": ["portable", "msi"],
        "extraResources": [
            {
                "from": "../backend/dist/suri-backend.exe",
                "to": "backend/suri-backend.exe"
            }
        ]
    },
    "linux": {
        "target": "AppImage",
        "category": "utility",
        "extraResources": [
            {
                "from": "../backend/dist/suri-backend",
                "to": "backend/suri-backend"
            }
        ]
    },
    "mac": {
        "target": "dmg",
        "extraResources": [
            {
                "from": "../backend/dist/suri-backend",
                "to": "backend/suri-backend"
            }
        ]
    }
}